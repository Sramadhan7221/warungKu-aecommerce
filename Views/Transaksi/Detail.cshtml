@using System.Globalization
@model WarungKuApp.ViewModels.TransaksiViewModel
@{
   ViewData["Title"] = "Daftar Pesanan";
   Layout = "_LayoutTemplate";
}
<h1 class="text-dark">@ViewData["Title"]</h1>
<div class="container">
   <div class="card  mt-3">
      <div class="card-body">
         <input type="hidden">
         <div class="row">
            <span class="card-header col-6">@Model.Status</span>
         </div>
         <hr class="dropdown-divider">
         <div class="row">
            <div class="col-7">
               <span class="card-subtitle mb-2 text-muted">@Model.Id</span>
               <span class="card-subtitle mb-2 text-muted">Tanggal Pembelian :</span>
            </div>
            <div class="col-5">
               <span class="text-right">Lihat invoice</span>
               <span class="text-right">@Model.TglTransaksi.ToString("dddd, dd MMMM yyyy", new
                  CultureInfo("id-ID"))</span>
            </div>
         </div>
         <p>Detail Produk</p>
         @foreach (var detail in @Model.DetailOrders)
         {
            <div class="card">
               <div class="card-body">
                  <h5 class="mb-2">@detail.NamaProduk</h5>
                  <div class="row">
                     <div class="col-6">
                        <span class="mb-2 text-muted">Qty : @detail.JmlBarang</span>
                     </div>
                     <div class="col-6">
                        <span class="mb-2">@detail.SubTotal.ToString("C", new CultureInfo("id-ID"))</span>
                     </div>
                  </div>
               </div>
            </div>
         }
         <div class="card-footer">
            <p>Total Harga</p>
            <h6 class="card-subtitle mb-2">@Model.JmlBayar.ToString("C", new CultureInfo("id-ID"))</h6>
         </div>
      </div>
   </div>
</div>