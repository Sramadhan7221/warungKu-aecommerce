@using WarungKuApp.Helpers
@model WarungKuApp.ViewModels.PembayaranViewModel
@{
     ViewData["Title"] = "Pembayaran";
     Layout = "_LayoutTemplate";
}
<h1 class="text-dark">@ViewData["Title"]</h1>
<div class="container">
     <h5 class="text-dark my-2">Total Tagihan : @Model.tagihan.ToIDR()</h5>
     <div class="row">
          <form asp-action="Create" method="post" enctype="multipart/form-data">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <input asp-for="NoTransaksi" type="hidden">
               <div class="form-group mb-3">
                    <label asp-for="Metode" class="control-label"></label>
                    <input asp-for="Metode" class="form-control" />
                    <span asp-validation-for="Metode" class="text-danger"></span>
               </div>
               <div class="form-group mb-3">
                    <label asp-for="Tujuan" class="control-label"></label>
                    <input asp-for="Tujuan" class="form-control" />
                    <span asp-validation-for="Tujuan" class="text-danger"></span>
               </div>
               <div class="form-group mb-3">
                    <label asp-for="TotalBayar" class="control-label"></label>
                    <input asp-for="TotalBayar" class="form-control" />
                    <span asp-validation-for="TotalBayar" class="text-danger"></span>
               </div>
               <div class="form-group mb-3">
                    <label asp-for="GambarFile" class="control-label"></label>
                    <input asp-for="GambarFile" type="file" class="form-control" />
                    <span asp-validation-for="GambarFile" class="text-danger"></span>
               </div>
               <div class="form-group mb-3">
                    <input type="submit" value="Kirim" class="btn btn-primary" />
               </div>
          </form>
     </div>
</div>
