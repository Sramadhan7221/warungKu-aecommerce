@using Microsoft.AspNetCore.Mvc.Rendering;
@model WarungKuApp.ViewModels.ProdukReqViewModel;

@{
     ViewData["Title"] = "Create";
     Layout = "_LayoutTemplate";
}
<div class="container">
     <h4 class="my-3">Create Produk</h4>

     <div class="row">
          <div class="col-md-12">
               <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                         <label asp-for="Nama" class="control-label"></label>
                         <input asp-for="Nama" class="form-control" />
                         <span asp-validation-for="Nama" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="Deskripsi" class="control-label"></label>
                         <input asp-for="Deskripsi" class="form-control" />
                         <span asp-validation-for="Deskripsi" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="Harga" class="control-label"></label>
                         <input asp-for="Harga" class="form-control" />
                         <span asp-validation-for="Harga" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="GambarFile" class="control-label"></label>
                         <input asp-for="GambarFile" type="file" class="form-control" />
                         <span asp-validation-for="GambarFile" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <label asp-for="IdKategoriProduk" class="control-label"></label>
                         @Html.DropDownList("IdKategoriProduk",
                         (List<SelectListItem>)ViewBag.KategoriDataSource,
                         "",
                         new {
                         @multiple = "multiple",
                         @class = "form-select"
                         })
                         <span asp-validation-for="IdKategoriProduk" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                         <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
               </form>
          </div>
     </div>
     <div>
          <a asp-action="Index">Back to List</a>
     </div>

</div>