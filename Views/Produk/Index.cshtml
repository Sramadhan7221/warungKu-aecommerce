@model IEnumerable<WarungKuApp.ViewModels.ProdukViewModel>
@{
     ViewData["Title"] = "Produk List";
     Layout = "_LayoutTemplate";
     int i = 0;
}

<div class="container">
     <h3 class="my-2">@ViewData["Title"]</h3>
     <p>
          <a asp-action="Create" class="btn btn-primary">Buat Baru</a>
     </p>
     <div class="row mt-3">
          <div class="col-md-12">
               <table class="table table-hover align-middle">
                    <thead>
                         <tr class="text-nowrap">
                              <th>#</th>
                              <th>Kategori</th>
                              <th>Gambar</th>
                              <th>Nama</th>
                              <th>Action</th>
                         </tr>
                    </thead>
                    <tbody>
                         @if (Model != null && Model.Any())
                         {
                              foreach (var item in Model)
                              {
                                   i++;
                                   <tr>
                                        <td>@i</td>
                                        <td>
                                             @foreach (var kategori in item.Kategories)
                                             {
                                                  <img src="@kategori.Icon" height="32" />
                                                  <p>@kategori.Nama</p>
                                             }
                                        </td>
                                        <td><img src="@item.GambarSrc" height="100" width="75" /></td>
                                        <td>@item.Nama</td>
                                        <td>
                                             <a class="btn btn-sm btn-primary" href="produk/edit/@item.IdProduk">Edit</a>
                                             <a class="btn btn-sm btn-danger" href="produk/delete/@item.IdProduk">Delete</a>
                                        </td>
                                   </tr>
                              }
                         }
                         else
                         {
                              <tr>
                                   <td colspan="4">Data kosong</td>
                              </tr>
                         }
                    </tbody>
               </table>
          </div>
     </div>
</div>
