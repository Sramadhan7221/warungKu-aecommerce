@model IEnumerable<WarungKuApp.ViewModels.KategoriViewModel>
@{
     ViewData["Title"] = "Kategori List";
     Layout = "_LayoutTemplate";
     int i = 0;
}

<div class="container">
     <h3 class="my-2">@ViewData["Title"]</h3>
     <p>
          <a asp-action="Create" class="btn btn-primary">Buat Baru</a>
     </p>
     <div class="row mt-3">
          <div class="col-md-12">
               <table class="table table-hover align-middle">
                    <thead>
                         <tr>
                              <th scope="col">No</th>
                              <th scope="col">@Html.DisplayNameFor(model => model.Nama)</th>
                              <th scope="col">@Html.DisplayNameFor(model => model.Deskripsi)</th>
                              <th scope="col">@Html.DisplayNameFor(model => model.Icon)</th>
                              <th scope="col">Editor</th>
                         </tr>
                    </thead>
                    @if (Model != null && Model.Any())
                    {
                         foreach (var item in Model)
                         {
                              i++;
                              <tr>
                                   <td>@i</td>
                                   <td>@item.Nama</td>
                                   <td>@item.Deskripsi</td>
                                   <td><img src="@item.Icon" width="50" /></td>
                                   <td>
                                        <a href="/KategoriProduk/edit/@item.IdKategoriProduk"
                                   class="btn btn-sm btn-warning">Edit</a>
                                        <a href="/KategoriProduk/edit/@item.IdKategoriProduk"
                                   class="btn btn-sm btn-primary mx-1">Detail</a>
                                        <a href="/KategoriProduk/delete/@item.IdKategoriProduk"
                                   class="btn btn-sm btn-danger">Delete</a>
                                   </td>
                              </tr>
                         }
                    }
                    else
                    {
                         <tr>
                              <td colspan="4">Data kosong</td>
                         </tr>
                    }
               </table>
          </div>
     </div>
</div>
